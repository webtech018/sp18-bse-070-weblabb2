extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right") Add New Product
    table.table
        thead
            tr
                th Product ID
                th Product Name
                th Poduct Category
                th Product Price
                th Action

        tbody
            each product in products
                tr  
                    td=product.name
                    td=product.contact
                    td=product.city
                    td=product.service
                    td
                        a(href="/products/delete/"+product._id, class="btn btn-danger") Delete



